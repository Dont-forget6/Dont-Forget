<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/margin_vertical_small1"
    android:paddingBottom="@dimen/margin_vertical_small1">

    <com.google.android.material.card.MaterialCardView
        style="@style/Theme.DontForget.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#00FFFFFF">

        <TextView
            android:id="@+id/textView_rowMainCategoryShimmer_categoryName"
            style="@style/Theme.DontForget.Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EAEAEA"
            android:fontFamily="@font/scdream_regular"
            android:textSize="@dimen/font_size_medium" />
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>